<%- include("../includes/head.ejs")%>
    <link rel="stylesheet" href="/css/addpost.css">
    </head>

    <body>
        <%- include("../includes/navigation.ejs")%>
            <form class="addpost" action="/add-post" method="POST" enctype="multipart/form-data">
                <% if(errorMessage){ %>
                    <div>
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" value="<%= oldInput.title %>">

                        <!-- <label for="imageUrl">Image Url</label>
                        <input type="text" id="imageUrl" name="imageUrl" value="<%= oldInput.imageUrl %>"> -->

                        <label for="image">Image</label>
                        <input type="file" id="image" name="image">

                        <label for=" content">Content</label>
                        <textarea rows="5" type="text" id="content" name="content"><%= oldInput.content %></textarea>

                        <input type="hidden" name="userId" value="<%= user._id %>">

                        <button type="submit">
                            Add Post
                        </button>
            </form>

            <%- include("../includes/end.ejs")%>